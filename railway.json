{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacksPlan": {
            "providers": [
                "node"
            ],
            "phases": {
                "setup": {
                    "cmds": [
                        "npm install -g corepack@0.24.1",
                        "corepack enable",
                        "corepack prepare yarn@3.2.1 --activate"
                    ]
                },
                "install": {
                    "cmds": [
                        "yarn install --frozen-lockfile"
                    ]
                },
                "build": {
                    "cmds": [
                        "yarn run build"
                    ]
                },
                "start": {
                    "cmds": [
                        "yarn run dev"
                    ]
                }
            }
        }
    }
}